<?xml version="1.0" encoding="utf-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">

  <theme href="index.html" />
  <notheme if="$ajax_load" />
  <notheme if-path="@@faceted_query" />
  <notheme if-path="@@updatetilecontent" />
  <notheme if-path="@@faceted_widgets" />
  <notheme if-path="@@faceted.catalog.types.json" />

  <rules if-content="//*[@id='portal-top']">
    <!-- Attributes -->
    <copy attributes="*" theme="/html" content="/html"/>
    <!-- Base tag -->
    <before theme="/html/head/title" content="/html/head/base"/>
    <!-- Title -->
    <replace theme="/html/head/title" content="/html/head/title" />
    <!-- Pull in Plone Meta -->
    <after theme-children="/html/head" content="/html/head/meta" />
    <!-- dont use Plone icons, use the theme -->
    <drop css:content="head link[rel='apple-touch-icon']" />
    <drop css:content="head link[rel='shortcut icon']" />
    <!-- Drop w.fc custom css -->
    <!-- <drop css:content="link[href*='bootstrap-fixed.css']" /> -->
    <!-- Script -->
    <after theme="/html/body/footer" content="/html/head/script" />
    <!-- CSS -->
    <before theme-children="/html/head" content="/html/head/link" />
  </rules>

  <!-- Move inline scripts in content to end of body -->
  <drop css:content="body script" />
  <after css:theme-children="html body" css:content="html body script" method="raw" />

  <!-- Copy over the id/class attributes on the body tag.
       This is important for per-section styling -->
  <copy attributes="class" css:content="body" css:theme="body" />
  <copy attributes="id dir" css:content="body" css:theme="body" />

  <!-- The standard logo -->
  <replace css:theme="#portal-logo" css:content="#portal-logo" />
  <!-- replaced with the svg version one -->
  <xi:include href="/++theme++ploneorg.theme/svglogo.xml"/>

  <!-- The log in link -->
  <append css:theme="#navbar-plonetheme ul.nav" css:content="#anon-personalbar"/>
  <append css:theme="#navbar-plonetheme ul.nav" css:content="#portal-personaltools"/>

  <!-- Central column -->
  <xsl:variable name="central">
    <xsl:if test="//*[@id='portal-column-one'] and //*[@id='portal-column-two']">col-xs-12 col-sm-6</xsl:if>
    <xsl:if test="//*[@id='portal-column-two'] and not(//*[@id='portal-column-one'])">col-xs-12 col-sm-9</xsl:if>
    <xsl:if test="//*[@id='portal-column-one'] and not(//*[@id='portal-column-two'])">col-xs-12 col-sm-9</xsl:if>
    <xsl:if test="not(//*[@id='portal-column-one']) and not(//*[@id='portal-column-two'])">col-xs-12 col-sm-12</xsl:if>
  </xsl:variable>

  <!-- Above content -->
  <rules if-content="//*[@id='viewlet-above-content']">
    <replace css:theme="#above-content" css:content="#viewlet-above-content" />
  </rules>

  <!-- Hero Image -->
  <rules if-content="//*[@class='heroimage']">
    <replace css:theme="#heroimage">
      <xsl:apply-templates css:select=".heroimage" mode="raw" />
    </replace>
  </rules>
  <drop css:theme="#heroimage-wrapper" if-content="not(//*[@class='heroimage'])" />

  <!-- Edit bar -->
  <rules if-content="//*[@id='edit-bar']">
    <append css:theme="#edit-bar" css:content-children="#edit-bar" />

    <replace css:content="#content-views">
      <ul class="nav nav-tabs pull-left clearfix">
          <xsl:apply-templates select="./*"/>
      </ul>
    </replace>

    <replace css:content="#edit-bar > .contentActions">
      <div class="contentActions">
        <ul class="nav nav-pills pull-right clearfix actionItems">
          <xsl:for-each select="./ul/li">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <xsl:attribute name="title"><xsl:value-of select="./dl/dt/a/@title"/></xsl:attribute>
                <xsl:attribute name="id"><xsl:value-of select="./dl/dt/a/@id"/></xsl:attribute>
                <xsl:apply-templates select="./dl/dt/a/*"/>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu pull-right actionMenuContent">
                <xsl:for-each select=".//dd/ul/li">
                  <xsl:choose>
                    <xsl:when css:test=".actionSeparator">
                      <li class="divider"></li>
                      <li>
                        <xsl:copy-of select="./div/span"/>
                        <xsl:copy-of select="./a"/>
                      </li>
                    </xsl:when>
                    <xsl:otherwise>
                              <li>
                                <a>
                                  <xsl:copy-of select="./a/@*" />
                                  <xsl:value-of select="./a/text()"/>
                                  <i>
                                    <xsl:attribute name="class"><xsl:value-of select="concat('fontello-icon-', ./a/@id)"/></xsl:attribute>
                                  </i>
                                  <xsl:copy-of select="./a/span"/>
                                </a>
                                <!-- <xsl:apply-templates select="./*"/> -->
                              </li>
                     </xsl:otherwise>
                   </xsl:choose>
                </xsl:for-each>
              </ul>
            </li>
          </xsl:for-each>
        </ul>
      </div>
    </replace>

    <replace content="//*[@class='selected']/@class">
        <xsl:attribute name="class">active</xsl:attribute>
    </replace>

    <drop css:content=".contentActions .arrowDownAlternative"/>

    <replace css:content=".actionSeparator">
        <li class="divider"></li>
        <li><xsl:apply-templates select="./*"/></li>
    </replace>
  </rules>
  <drop css:theme="#edit-bar" if-content="not(//*[@id='edit-bar'])" />

  <!-- Alert message -->
  <strip css:content=".portalMessage dd"/>
  <drop css:content=".portalMessage dt"/>
  <replace css:content=".portalMessage">
    <xsl:choose>
        <xsl:when css:test=".portalMessage[style]"/>
        <xsl:when css:test=".portalMessage.info">
            <div class="alert alert-dismissable alert-info">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <strong><xsl:apply-templates select="./dt/text()"/></strong>
                <!-- <xsl:if test="not(./dd/)">body node missing</xsl:if> -->
                <xsl:apply-templates select="./*"/>
            </div>
        </xsl:when>
        <xsl:when css:test=".portalMessage.error">
            <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <strong><xsl:apply-templates select="./dt/text()"/></strong>
                <xsl:apply-templates select="./dd/text()"/>
            </div>
        </xsl:when>
        <xsl:when css:test=".portalMessage.success">
            <div class="alert alert-dismissable alert-warning">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <strong><xsl:apply-templates select="./dt/text()"/></strong>
                <xsl:apply-templates select="./dd/text()"/>
            </div>
        </xsl:when>
        <xsl:otherwise>
            <div class="alert alert-dismissable alert-info">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <strong><xsl:apply-templates select="./dt/text()"/></strong>
                <xsl:apply-templates select="./dd/text()"/>
            </div>
        </xsl:otherwise>
    </xsl:choose>
  </replace>

  <append css:theme="#globalstatusmessage" css:content=".portalMessage" if-content="not(//*[@id='content']/dl)" />

  <!-- Main content -->
  <replace css:theme="#content-container" method="raw">
      <div class="{$central}">
          <div class="row">
            <div class="col-xs-12 col-sm-12">
               <xsl:apply-templates select="//div[@id='content']"/>
               <!-- <xsl:copy-of select="//div[@id='content']"/> -->
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-12">
             <xsl:copy-of select="//div[@id='viewlet-below-content']"/>
            </div>
          </div>
      </div><!--/row-->
  </replace>

  <!-- Complete heroimage "move" -->
  <xsl:template css:match="#content .heroimage" />

  <!-- Left column -->
  <rules if-content="//*[@id='portal-column-one']">
    <replace css:theme="#column1-container">
        <div class="col-xs-6 col-sm-3" id="sidebar" role="navigation">
          <aside id="portal-column-one">
             <xsl:copy-of select="//*[@id='portal-column-one']/*"/>
          </aside>
        </div>
    </replace>
  </rules>

  <!-- Right column -->
  <rules if-content="//*[@id='portal-column-two']">
    <replace css:theme="#column2-container">
        <div class="col-xs-6 col-sm-3" id="sidebar" role="navigation">
          <aside id="portal-column-two">
             <xsl:copy-of select="//*[@id='portal-column-two']/*"/>
          </aside>
        </div>
    </replace>
  </rules>
</rules>
